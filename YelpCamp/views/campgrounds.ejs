<% include partials/header.ejs %>

<div class="container">
    <header class="jumbotron">
        <h1>Welcome to Yelp Camp!</h1>
        <p>There are awesome campgrounds from all around the world.</p>
        <button type="button" class="btn btn-primary btn-lg" onclick="location.href='/campgrounds/new'">Add New Campground</button>
    </header>
    
    <div class="row" style="display:flex ; flex-wrap:wrap;">
    <% for(var i=0; i<campgrounds.length; i++){ %>
        <div class="col-md-3 col-sm-6" >
            <div class="py-2"> 
                <img src="<%= campgrounds[i].image %>" class="img-thumbnail"/>asd </img>
                <h4><%= campgrounds[i].name %></h4>
            </div>
        </div>
    <% } %>
    </div>
<% include partials/footer.ejs %>
</div>

